{
  "schemaVersion": 1,
  "id": "durability-warn",
  "version": "${version}",
  "name": "DurabilityWarn",
  "description": "Stay safe! Displays durability warnings for your armor and tools in the action bar. Requires Meteor Client or a compatible fork.",
  "authors": [
    "nivaluna"
  ],
  "contact": {
    "sources": "https://github.com/nivalunaa/durability-warn"
  },
  "icon": "assets/durability-warn/icon.png",
  "environment": "client",
  "entrypoints": {
    "meteor": [
      "io.github.nivalunaa.durabilitywarnaddon.DurabilityWarnAddon"
    ]
  },
  "custom": {
    "meteor-client:color": "225,25,25",
    "modmenu": {
      "parent": {
        "id": "meteor-client"
      }
    }
  },
  "depends": {
    "java": ">=21",
    "minecraft": ["~${mc_version}"],
    "meteor-client": "*"
  }
}
